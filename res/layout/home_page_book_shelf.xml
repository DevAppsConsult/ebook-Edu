<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/grid_column_width_med"
    android:layout_height="@dimen/grid_column_height_med"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    android:backgroundTint="#66000000"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="@dimen/grid_column_width"
            android:layout_height="@dimen/grid_column_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/book_cover_description"
            android:src="@drawable/loading" />


